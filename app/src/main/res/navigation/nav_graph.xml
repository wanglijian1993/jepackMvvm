<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/page1Fragment">


    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.example.myjepckmvvm.navigation.fragments.Page1Fragment"
        android:label="Page1Fragment"
        tools:layout="@layout/fragment_page1">
        <action
            android:id="@+id/action_page1_to_page2"
            app:destination="@id/page2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.myjepckmvvm.navigation.fragments.Page2Fragment"
        android:label="Page2Fragment"
        tools:layout="@layout/fragment_page2">
        <action
            android:id="@+id/action_page2_to_page1"
            app:destination="@id/page1Fragment" />
    </fragment>
</navigation>